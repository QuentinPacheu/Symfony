                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>AjoutÃ© le<br>
                                                <span class="text-bright">{{ product.createdAt|date('d/m/Y') }}</span>
                                            </small>
                                        </div>
                                    {% endif %}
