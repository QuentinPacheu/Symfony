{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">
            <i class="fas fa-users me-2"></i>Gestion des utilisateurs
        </h1>
        <form method="post" action="{{ path('app_admin_add_points') }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('add_points') }}">
            <button type="submit" class="btn btn-success-modern" onclick="return confirm('Ajouter 1000 points √† tous les utilisateurs actifs ?')">
                <i class="fas fa-coins me-2"></i>üí∞ Ajouter 1000 points aux utilisateurs actifs
            </button>
        </form>
    </div>

    <div class="modern-card">
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                        <th><i class="fas fa-user me-1"></i>Nom</th>
                        <th><i class="fas fa-user me-1"></i>Pr√©nom</th>
                        <th><i class="fas fa-coins me-1"></i>Points</th>
                        <th><i class="fas fa-shield-alt me-1"></i>R√¥les</th>
                        <th><i class="fas fa-toggle-on me-1"></i>Statut</th>
                        <th><i class="fas fa-calendar me-1"></i>Cr√©√© le</th>
                        <th><i class="fas fa-cogs me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="{{ not user.actif ? 'table-warning' : '' }}">
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>
                            <strong class="points-display">{{ user.points }} üí∞</strong>
                        </td>
                        <td>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="badge bg-danger badge-animated">
                                        <i class="fas fa-crown me-1"></i>Admin
                                    </span>
                                {% elseif role == 'ROLE_USER' %}
                                    <span class="badge bg-primary">
                                        <i class="fas fa-user me-1"></i>User
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% if user.actif %}
                                <span class="badge bg-success badge-animated">
                                    <i class="fas fa-check-circle me-1"></i>Actif
                                </span>
                            {% else %}
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle me-1"></i>D√©sactiv√©
                                </span>
                            {% endif %}
                        </td>
                        <td>{{ user.createdAt ? user.createdAt|date('d/m/Y') : '' }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' not in user.roles %}
                                <form method="post" action="{{ path('app_admin_user_toggle', {'id': user.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                    {% if user.actif %}
                                        <button type="submit" class="btn btn-warning-modern btn-sm" onclick="return confirm('D√©sactiver cet utilisateur ?')">
                                            <i class="fas fa-ban me-1"></i>D√©sactiver
                                        </button>
                                    {% else %}
                                        <button type="submit" class="btn btn-success-modern btn-sm" onclick="return confirm('Activer cet utilisateur ?')">
                                            <i class="fas fa-check me-1"></i>Activer
                                        </button>
                                    {% endif %}
                                </form>
                            {% else %}
                                <span class="text-muted">
                                    <i class="fas fa-shield-alt me-1"></i>Prot√©g√©
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center">
                            <i class="fas fa-users-slash me-2"></i>Aucun utilisateur trouv√©
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="alert alert-modern alert-info-modern mt-4">
        <h6 class="alert-heading">
            <i class="fas fa-info-circle me-2"></i>Information importante
        </h6>
        <p class="mb-0">
            <strong>Note :</strong> Les administrateurs ne peuvent pas √™tre d√©sactiv√©s pour des raisons de s√©curit√©.
        </p>
    </div>
{% endblock %}