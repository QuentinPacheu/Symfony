{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block body %}
    <!-- Header avec navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white">
                <i class="fas fa-plus-circle me-2" style="color: var(--accent-color);"></i>
                Cr√©er un nouveau produit
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-decoration-none" style="color: var(--accent-color);">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_admin_product_index') }}" class="text-decoration-none" style="color: var(--accent-color);">
                            <i class="fas fa-box me-1"></i>Produits
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-light-custom">Nouveau</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-warning-modern">
                <i class="fas fa-arrow-left me-2"></i>Retour √† la liste
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Formulaire de cr√©ation -->
        <div class="col-lg-8">
            <div class="modern-card">
                <h5 class="text-white mb-4">
                    <i class="fas fa-edit me-2"></i>Informations du produit
                </h5>

                {{ form_start(form) }}
                
                <div class="mb-4">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label text-light-custom fw-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control-modern', 'placeholder': 'Ex: iPhone 15 Pro'}}) }}
                    {% if form_errors(form.name) %}
                        <div class="text-danger mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            {{ form_errors(form.name) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.price, null, {'label_attr': {'class': 'form-label text-light-custom fw-bold'}}) }}
                    <div class="input-group">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control-modern', 'placeholder': '1500'}}) }}
                        <span class="input-group-text bg-transparent text-light-custom border-0">
                            <i class="fas fa-coins me-1"></i>üí∞ Points
                        </span>
                    </div>
                    {% if form_errors(form.price) %}
                        <div class="text-danger mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            {{ form_errors(form.price) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.category, null, {'label_attr': {'class': 'form-label text-light-custom fw-bold'}}) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-select-modern'}}) }}
                    {% if form_errors(form.category) %}
                        <div class="text-danger mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            {{ form_errors(form.category) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-light-custom fw-bold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control-modern', 'rows': 6, 'placeholder': 'D√©crivez les caract√©ristiques et avantages de ce produit...'}}) }}
                    {% if form_errors(form.description) %}
                        <div class="text-danger mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Une description d√©taill√©e aidera les utilisateurs √† mieux comprendre le produit.
                    </small>
                </div>

                <div class="d-flex gap-3 justify-content-end">
                    <a href="{{ path('app_admin_product_index') }}" class="btn btn-danger-modern">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-success-modern">
                        <i class="fas fa-save me-2"></i>Cr√©er le produit
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <!-- Panneau d'aide -->
        <div class="col-lg-4">
            <div class="modern-card">
                <h5 class="text-white mb-4">
                    <i class="fas fa-lightbulb me-2"></i>Conseils de cr√©ation
                </h5>
                
                <div class="mb-4">
                    <h6 class="text-accent">
                        <i class="fas fa-tag me-2"></i>Nom du produit
                    </h6>
                    <p class="text-light-custom mb-3">
                        Choisissez un nom clair et descriptif qui permet d'identifier facilement le produit.
                    </p>
                </div>

                <div class="mb-4">
                    <h6 class="text-accent">
                        <i class="fas fa-coins me-2"></i>Prix en points
                    </h6>
                    <p class="text-light-custom mb-3">
                        D√©finissez un prix √©quitable bas√© sur la valeur du produit. Les utilisateurs √©changent leurs points durement gagn√©s !
                    </p>
                </div>

                <div class="mb-4">
                    <h6 class="text-accent">
                        <i class="fas fa-layer-group me-2"></i>Cat√©gorie
                    </h6>
                    <p class="text-light-custom mb-3">
                        S√©lectionnez la cat√©gorie appropri√©e pour faciliter la navigation des utilisateurs.
                    </p>
                </div>

                <div class="alert alert-modern">
                    <h6 class="alert-heading">
                        <i class="fas fa-star me-2"></i>Astuce
                    </h6>
                    <p class="mb-0">
                        Une description compl√®te avec les sp√©cifications techniques augmente l'attractivit√© du produit !
                    </p>
                </div>
            </div>

            <!-- Aper√ßu du produit -->
            <div class="modern-card">
                <h5 class="text-white mb-4">
                    <i class="fas fa-eye me-2"></i>Aper√ßu
                </h5>
                <div class="product-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <span id="preview-name">Nom du produit</span>
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-secondary">
                                <span id="preview-category">Cat√©gorie</span>
                            </span>
                        </p>
                        <p class="card-text" id="preview-description">
                            Description du produit...
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="product-price mb-0">
                                <span id="preview-price">0</span> üí∞
                            </h4>
                            <button class="btn btn-modern" disabled>
                                Voir d√©tails
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Mise √† jour de l'aper√ßu en temps r√©el
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.querySelector('input[name*="[name]"]');
            const priceInput = document.querySelector('input[name*="[price]"]');
            const categorySelect = document.querySelector('select[name*="[category]"]');
            const descriptionTextarea = document.querySelector('textarea[name*="[description]"]');

            function updatePreview() {
                const previewName = document.getElementById('preview-name');
                const previewPrice = document.getElementById('preview-price');
                const previewCategory = document.getElementById('preview-category');
                const previewDescription = document.getElementById('preview-description');

                if (nameInput && previewName) {
                    previewName.textContent = nameInput.value || 'Nom du produit';
                }
                if (priceInput && previewPrice) {
                    previewPrice.textContent = priceInput.value || '0';
                }
                if (categorySelect && previewCategory) {
                    const selectedOption = categorySelect.options[categorySelect.selectedIndex];
                    previewCategory.textContent = selectedOption ? selectedOption.text : 'Cat√©gorie';
                }
                if (descriptionTextarea && previewDescription) {
                    const desc = descriptionTextarea.value || 'Description du produit...';
                    previewDescription.textContent = desc.length > 100 ? desc.substring(0, 100) + '...' : desc;
                }
            }

            // √âcouter les changements
            if (nameInput) nameInput.addEventListener('input', updatePreview);
            if (priceInput) priceInput.addEventListener('input', updatePreview);
            if (categorySelect) categorySelect.addEventListener('change', updatePreview);
            if (descriptionTextarea) descriptionTextarea.addEventListener('input', updatePreview);

            // Mise √† jour initiale
            updatePreview();
        });
    </script>
{% endblock %}